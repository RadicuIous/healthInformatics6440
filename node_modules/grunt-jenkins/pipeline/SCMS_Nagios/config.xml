<?xml version="1.0" encoding="UTF-8"?><project>
  <actions/>
  <description/>
  <logRotator>
    <daysToKeep>30</daysToKeep>
    <numToKeep>-1</numToKeep>
    <artifactDaysToKeep>-1</artifactDaysToKeep>
    <artifactNumToKeep>-1</artifactNumToKeep>
  </logRotator>
  <keepDependencies>false</keepDependencies>
  <properties>
    <hudson.model.ParametersDefinitionProperty>
      <parameterDefinitions>
        <hudson.model.StringParameterDefinition>
          <name>TRIGGERING_PROJECT_WORKSPACE_ARTIFACT</name>
          <description/>
          <defaultValue>$TRIGGERING_PROJECT_WORKSPACE_ARTIFACT</defaultValue>
        </hudson.model.StringParameterDefinition>
        <hudson.model.StringParameterDefinition>
          <name>TRIGGERING_PROJECT</name>
          <description/>
          <defaultValue>$TRIGGERING_PROJECT</defaultValue>
        </hudson.model.StringParameterDefinition>
      </parameterDefinitions>
    </hudson.model.ParametersDefinitionProperty>
  </properties>
  <scm class="hudson.scm.NullSCM"/>
  <assignedNode>Nagios</assignedNode>
  <canRoam>false</canRoam>
  <disabled>false</disabled>
  <blockBuildWhenDownstreamBuilding>false</blockBuildWhenDownstreamBuilding>
  <blockBuildWhenUpstreamBuilding>false</blockBuildWhenUpstreamBuilding>
  <triggers class="vector"/>
  <concurrentBuild>false</concurrentBuild>
  <builders>
    <hudson.plugins.copyartifact.CopyArtifact>
      <projectName>$TRIGGERING_PROJECT</projectName>
      <filter>$TRIGGERING_PROJECT_WORKSPACE_ARTIFACT</filter>
      <target/>
      <selector class="hudson.plugins.copyartifact.StatusBuildSelector"/>
    </hudson.plugins.copyartifact.CopyArtifact>
    <hudson.tasks.Shell>
      <command>tar -xmzf $TRIGGERING_PROJECT_WORKSPACE_ARTIFACT</command>
    </hudson.tasks.Shell>
    <hudson.tasks.Shell>
      <command>sudo su -c "rm -f /etc/nagios/objects/scms-*"
sudo su -c "rm -rf /etc/puppet/manifests /etc/puppet/modules /etc/puppet/config"
sudo su -c "cp -R deploy/puppet/* /etc/puppet"
sudo su - -c "puppet apply /etc/puppet/manifests/site.pp &gt; /tmp/apply.log 2&gt;&amp;1"
EXITCODE=$?
sudo su -c "chown cibuild /tmp/apply.log"
cat /tmp/apply.log
# Look for "err:" or "Syntax error"
! grep 'err[:o]r*' /tmp/apply.log
ERRFOUND=$?
[ $ERRFOUND = 0 ] &amp;&amp; [ $EXITCODE = 0 ]</command>
    </hudson.tasks.Shell>
    <hudson.tasks.Shell>
      <command>sudo su - -c "service nagios restart"</command>
    </hudson.tasks.Shell>
  </builders>
  <publishers>
    <hudson.plugins.ws__cleanup.WsCleanup>
      <deleteDirs>false</deleteDirs>
      <skipWhenFailed>false</skipWhenFailed>
    </hudson.plugins.ws__cleanup.WsCleanup>
  </publishers>
  <buildWrappers/>
</project>